{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": "container",
    "height": "container",
    "autosize": {"type": "fit", "contains": "content", "resize": true},
    "data": {"name": "trendData"},
    "layer":[{
      "mark": {"type": "line", "point": false, "tooltip": true},
      "encoding": {
        "x": {
          "field": "time",
          "title": "Time Period",
          "type": "ordinal",
          "axis": {"title": null, "labelAngle": 45}
        },
        "y": {
          "field": "data_value",
          "title": "Value",
          "type": "quantitative",
          "axis": {"title": null}
        },
        "detail": {
          "field": "neighborhood",
          "title": "Neighborhood",
          "type":"nominal"
        },
        "color": {
          "value": "lightgrey"
        }
      }
    },{
      "mark": {"type": "line", "point": true, "tooltip": true},
      "encoding": {
        "x": {
          "field": "time",
          "title": "Time Period",
          "type": "ordinal",
          "axis": {"title": null, "labelAngle": 45}
        },
        "y": {
          "field": "data_value",
          "title": "Value",
          "type": "quantitative",
          "axis": {"title": null}
        },
        "detail": {
          "field": "neighborhood",
          "title": "Neighborhood",
          "type": "nominal"
        },
        "color": {
          "condition": {
            "test": "datum.neighborhood=='Canarsie - Flatlands'",
            "value": "#1CA970"
          },
          "value": null
        }
      }
    }]
  }