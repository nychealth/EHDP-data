{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {
    "view": {"stroke": "transparent"}
  },
  "layer": [
    {
      "data":{
        "url": "",
        "format": {"type": "topojson", "feature": "collection"}
      },
      "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
      },{
        "data": {
          "url": "",
          "format": {"type": "topojson", "feature": "collection"}
        },
        "transform": [
          {
            "lookup": "properties.GEOCODE",
            "from": {
              "data": {"name": "csv"},
              "key": "GEOCODE",
              "fields": [
                "GEOCODE",
                "GEONAME",
                "PUMA",
                "VALUE"
              ]
            },
            "default": "no data"
          },
          {"calculate": "toString(datum.properties.PUMA) + ': ' + datum.GEONAME", "as": "puma_name"}
        ],
        "mark": {"type": "geoshape", "stroke": "#838383"},
        "encoding": {
          "color": {
            "bin": false,
            "field": "VALUE",
            "type": "quantitative",
            "legend":null,
            "scale": {"scheme": {"name": "purplegreen", "extent": [0.25, 0.75]}}
          },
          "strokeWidth": {
            "condition": [],
            "value": 0.5
          },
          "tooltip": [
            {
              "field": "puma_name",
              "type": "nominal",
              "title": "PUMA Neighborhood"
            },
            {
              "field": "GEOCODE",
              "type": "quantitative",
              "title": "Geo code"
            }
          ]
        }
        }]
      }