{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {
    "view": {"stroke": "transparent"}
  },
  "layer":[
    {
    "data":{
    "url": "https://raw.githubusercontent.com/nychealth/EHDP-data/{{ site.Params.data_branch }}/geography/PUMA_or_Subborough.topo.json",
    "format": {"type": "topojson", "feature": "collection"}
    },
    "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
  },{
  "data": {
    "url": "https://raw.githubusercontent.com/nychealth/EHDP-data/{{ site.Params.data_branch }}/geography/PUMA_or_Subborough.topo.json",
    "format": {"type": "topojson", "feature": "collection"}
  },
  "transform": [
    {
      "lookup": "properties.GEOCODE",
      "from": {
        "data": {"url": "PUMA_DATA.csv"},
        "key": "GEOCODE",
        "fields": [
          "GEOCODE",
          "VALUE"
        ]
      },
      "default": "no data"
    }
  ],
  "mark": {"type": "geoshape", "stroke": "#838383"},
  "encoding": {
    "color": {
      "bin": false,
      "field": "VALUE",
      "type": "quantitative",
      "legend":null,
      "scale": {"scheme": {"name": "purplegreen", "extent": [0.25, 0.75]}}
    },
    "strokeWidth": {
      "condition": [],
      "value": 0.5
    },
    "tooltip": [
      {
        "field": "properties.GEONAME",
        "type": "nominal",
        "title": "Neighborhood"
      },
      {
        "field": "GEOCODE",
        "type": "quantitative",
        "title": "Geo code"
      }
    ]
  }
}]
}