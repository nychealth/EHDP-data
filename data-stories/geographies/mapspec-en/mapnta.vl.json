{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {
    "view": {"stroke": "transparent"}
  },
  "layer":[
    {
      "data":{
        "name": "topo",
        "format": {"type": "topojson", "feature": "collection"}
      },
      "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
      },{
        "data": {
          "name": "topo",
          "format": {"type": "topojson", "feature": "collection"}
        },
        "transform": [
          {
            "lookup": "NTACode",
            "from": {
              "data": {"name": "csv"},
              "key": "NTACODE",
              "fields": [
                "NTACODE",
                "NTANAME",
                "VALUE"
              ]
            },
            "default": "no data"
          }
        ],
        
        "mark": {"type": "geoshape", "stroke": "#838383"},
        "encoding": {
          "color": {
            "bin": false,
            "field": "VALUE",
            "type": "quantitative",
            "legend":null,
            "scale": {"scheme": {"name": "purplegreen", "extent": [0.25, 0.75]}}
          },
          "strokeWidth": {
            "condition": [],
            "value": 0.5
          },
          "tooltip": [
            {
              "field": "NTACode",
              "type": "nominal",
              "title": "NTA Code"
            },
            {
              "field": "NTANAME",
              "type": "nominal",
              "title": "Neighborhood"
            }
          ]
        }
        }]
      }