{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {
    "view": {"stroke": "transparent"}
  },
  "layer": [
    {
    "data":{
    "url": "",
    "format": {"type": "topojson", "feature": "collection"}
    },
    "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
  },{
  "data": {
    "url": "",
    "format": {"type": "topojson", "feature": "collection"}
  },
  "transform": [
    {
      "lookup": "properties.PUMA",
      "from": {
        "data": {"name": "csv"},
        "key": "GEOCODE",
        "fields": [
          "GEOCODE",
          "toilet-breakdowns"
        ]
      },
      "default": "no data"
    }
  ],

  "mark": {"type": "geoshape", "stroke": "#ffffff"},
  "encoding": {
    "color": {
      "bin": false,
      "field": "toilet-breakdowns",
      "type": "quantitative",
      "legend": {
        "title": "Baño descompuesto",
        "titleFontSize": 12,
        "orient":"top-left",
        "gradientLength": 100
    },
    "scale": {"scheme": {"name": "purplered", "extent": [0.01, 0.6]}}
    },
    "strokeWidth": {
      "condition": [],
      "value": 0.5
    },
    "tooltip": [
      {
        "field": "properties.GEONAME",
        "type": "nominal",
        "title": "Vecindario"
      },
      {
        "field": "toilet-breakdowns",
        "type": "quantitative",
        "title": "Porcentaje de hogares con baño descompuesto"
      }
    ]
  }
}]
}