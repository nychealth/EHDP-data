{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {
    "view": {"stroke": "transparent"}
  },
  "layer":[
    {
    "data":{
    "url": "https://raw.githubusercontent.com/nycehs/NYC_geography/master/PUMA_or_Subborough.topo.json",
    "format": {"type": "topojson", "feature": "collection"}
    },
    "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
  },{
  "data": {
    "url": "https://raw.githubusercontent.com/nycehs/NYC_geography/master/PUMA_or_Subborough.topo.json",
    "format": {"type": "topojson", "feature": "collection"}
  },
  "transform": [
    {
      "lookup": "properties.PUMA",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/nychealth/EHDP-data/main/datastories/housing/housing-data-story-data.csv"},
        "key": "GEOCODE",
        "fields": [
          "GEOCODE",
          "cracks-holes-interior"
        ]
      },
      "default": "no data"
    }
  ],

  "mark": {"type": "geoshape", "stroke": "#ffffff"},
  "encoding": {
    "color": {
      "bin": false,
      "field": "cracks-holes-interior",
      "type": "quantitative",
      "legend": {
        "title": "墙上的裂缝和孔洞",
        "titleFontSize": 12,
        "orient":"top-left",
        "gradientLength": 100
    },
    "scale": {"scheme": {"name": "purplered", "extent": [0.01, 1.05]}}
    },
    "strokeWidth": {
      "condition": [],
      "value": 0.5
    },
    "tooltip": [
      {
        "field": "properties.GEONAME",
        "type": "nominal",
        "title": "社区"
      },
      {
        "field": "cracks-holes-interior",
        "type": "quantitative",
        "title": "百分比"
      }
    ]
  }
}]
}